            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--Players-->
        <HorizontalStackLayout Grid.ColumnSpan="7">
            <CollectionView ItemsSource="{Binding Players}" ItemsLayout ="HorizontalList">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="{x:Type model:Player}">
                        <Grid Padding="10">
                            <Label Text="{Binding Username}" HorizontalOptions="Center" VerticalOptions="Start" />
                            <Image Source="{Binding PlayingImageSource}" WidthRequest="50" HorizontalOptions="Center" Margin="30" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </HorizontalStackLayout>

        <!--Table-->
        <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="6" Grid.RowSpan="7">
            <Rectangle BackgroundColor="#855E42">
                <Rectangle.Shadow>
                    <Shadow
                        Brush="#331800"
                        Offset="10, 10"
                        Radius="7"
                        Opacity="0.3"
                        />
                </Rectangle.Shadow>
            </Rectangle>
        </Grid>

