<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SecretHitler.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SecretHitler"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="MainPage"
            ContentTemplate="{DataTemplate local:MainPage}"
            Icon="{OnPlatform 'icon_notes.png', iOS='icon_notes_ios.png', MacCatalyst='icon_notes_ios.png'}" />

        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate local:AboutPage}"
            Icon="{OnPlatform 'icon_about.png', iOS='icon_about_ios.png', MacCatalyst='icon_about_ios.png'}" />

        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate local:NotePage}"
            Icon="{OnPlatform 'icon_settings.png', iOS='icon_settings_ios.png', MacCatalyst='icon_settings_ios.png'}" />
    </TabBar>

</Shell>
